<mvc:View 
  controllerName="project1.controller.home"
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns="sap.m" 
	xmlns:tnt="sap.tnt">
  <ScrollContainer height="100%" width="100%" vertical="true" focusable="true">
		<Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
			<content class="panelbottomline">
				<HBox width="100%" height="3rem">
					<Title text="G/L 계정과목 페이지"  />
				</HBox>
				<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="G/L 계정과목 관리" press=".onAccount">
					<TileContent>
						<ImageContent src="sap-icon://course-book"/>
					</TileContent>
				</GenericTile>
				<HBox width="100%" height="3rem"/>
				<HBox width="100%" height="3rem">
					<Title text="BP(고객마스터) 페이지"/>
				</HBox>
        <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="BP(고객마스터) 관리" press=".onCustomer">
					<TileContent>
						<ImageContent src="sap-icon://person-placeholder"/>
					</TileContent>
				</GenericTile>
			</content>
		</Panel>
	</ScrollContainer>
</mvc:View>