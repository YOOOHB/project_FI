<mvc:View controllerName="project1.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt">
	<tnt:ToolPage id="toolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Image height="30px"
					   class="sapUiSmallMarginBegin"
                       src="Image/SAPlogo.svg"
                       press=".onHome" />       
				<MenuButton enabled="true" text="물품 요청">
                    <menu>
                        <Menu itemSelected=".onMenuEvent">
                            <MenuItem text="물품 요청 목록" press=".onRequest" />
                            <MenuItem text="협력 업체 목록" press=".onCompany" />
                            <MenuItem text="부품 목록" press=".onMaterial" />
                        </Menu>
                    </menu>
                </MenuButton>
			</tnt:ToolHeader>
		</tnt:header>
        
		<tnt:mainContents>
			<App id="app">
            </App>
		</tnt:mainContents>
	</tnt:ToolPage>
    
</mvc:View>
