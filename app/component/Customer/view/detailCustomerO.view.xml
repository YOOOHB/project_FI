<mvc:View
	controllerName="project3.controller.detailCustomerO"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

	<ObjectPageLayout id="ObjectPageLayout"
					showTitleInHeaderContent="true"
					upperCaseAnchorBar="false"
					showFooter="true"
					toggleHeaderOnTitleClick="false"
					headerContentPinnable="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
				<m:HBox>
					<m:Button type="Back" class="sapUiTinyMarginTop" press=".onCustomer"/>
					<m:Title text="{CustomerModel>/name}" wrapping="true" />
				</m:HBox>	
				</expandedHeading>

				<expandedContent>
					<m:Text text="{CustomerModel>/customerNumber}" class="sapUiMediumMarginBegin"/>
				</expandedContent>

				<actions>
					<m:Button text="편집" type="Emphasized" press=".onChange"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">
				<m:Image class="sapUiSmallMarginEnd" src="./Image/building1.png" width="60px" height="80px" />

				<layout:VerticalLayout>
					<m:Label text="비즈니스 파트너 범주 : " design="Bold" width="500px"/>
					<m:ObjectStatus
                             text="{
                                path:'CustomerModel>/bpRange',
                                formatter:'.Cformatter.statusText'
                                }" />
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label id="address" text="표준 주소" design="Bold" width="500px"/>
					<m:Text text="{CustomerModel>/country} {CustomerModel>/city} {CustomerModel>/region} {CustomerModel>/postalCode} {CustomerModel>/street} {CustomerModel>/houseNumber}" width="500px"/>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label id="cmpCode" text="회사 코드" design="Bold"/>
					<m:Text text="{CustomerModel>/cmpCode}" width="500px"/>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="담당자" design="Bold" width="300px"/>
					<m:Text id="manager" text="{CustomerModel>/manager}" width="300px"/>
				</layout:VerticalLayout>
			</m:FlexBox>
		</headerContent>

		<sections>
			<ObjectPageSection titleUppercase="false" title="일반 정보" >
				<subSections>
					<ObjectPageSubSection>
							<m:VBox class="sapUiSmallMargin">
								<f:SimpleForm id="SimpleFormDisplayColumn_oneGroup234"
												editable="false"
												layout="ColumnLayout"
												title="일반 정보"
												columnsXL="4"
												width="80%"
												>
									<f:content>
										<m:Label text="고객 명" />
										<m:Text id="name" text="{CustomerModel>/name}" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label id="lgForm" text="{CustomerModel>/lgForm}" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="생성일" />
										<m:Text id="createDate" text="{CustomerModel>/createDate}"/>
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="최종 변경일" />
										<m:Text id="changeDate" text="{CustomerModel>/changeDate}" />
										<m:Label text="최종 변경자" />
										<m:Text id="modifier" text="{CustomerModel>/modifier}" />
										
									</f:content>
								</f:SimpleForm>
							</m:VBox>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="고객 정보">
				<subSections>
					<ObjectPageSubSection>
							<m:VBox class="sapUiSmallMargin">
								<f:SimpleForm id="SimpleFormDisplayColumn_oneGroup223234"
												editable="false"
												layout="ColumnLayout"
												title="고객 정보"
												columnsXL="4"
												width="80%"
												>
									<f:content>
										<m:Label text="고객 번호" />
										<m:Text id="customerNumber" text="{CustomerModel>/customerNumber}" />
										<m:Label text="고객 계정 그룹" />
										<m:Text id="accGroup" text="{CustomerModel>/accGroup}" />
										<m:Label text="조정 계정" />
										<m:Text text="21100000" />
										<m:Label text="오더 보류" />
										<m:Text id="orderHold" text="{CustomerModel>/orderHold}" />
										<m:Label text="청구 보류" />
										<m:Text id="requestHold" text="{CustomerModel>/requestHold}" />
										<m:Label text="전기 보류" />
										<m:CheckBox id="postHold" editable="false" selected="{CustomerModel>/postHold}"/>
										<m:Label text="고객 분류" />
										<m:Text id="customer" text="{CustomerModel>/customer}" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
									</f:content>
								</f:SimpleForm>
							</m:VBox>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="은행 정보">
				<subSections>
					<ObjectPageSubSection>
							<m:VBox class="sapUiSmallMargin">
								<f:SimpleForm id="SimpleFormDisplayColumn_oneGroup223213234"
												editable="false"
												layout="ColumnLayout"
												title="은행 정보"
												columnsXL="4"
												width="80%"
												>
									<f:content>
										<m:Label text="은행명" />
										<m:Text id="bankKey" text="{CustomerModel>/bankKey}" />
										<m:Label text="계좌 번호" />
										<m:Text id="bankNumber" text="{CustomerModel>/bankNumber}" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
									</f:content>
								</f:SimpleForm>
							</m:VBox>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="주소">
				<subSections>
					<ObjectPageSubSection>
						<m:VBox class="sapUiSmallMargin">
								<f:SimpleForm id="SimpleFormDisplayColumn_oneGroup22323234"
												editable="false"
												layout="ColumnLayout"
												title="표준 주소"
												columnsXL="4"
												width="80%"
												>
									<f:content>
										<m:Label text="도로 주소" />
										<m:Text id="street" text="{CustomerModel>/street}" />
										<m:Label text="번지" />
										<m:Text id="houseNumber" text="{CustomerModel>/houseNumber}" />
										<m:Label text="우편 번호" />
										<m:Text id="postalCode" text="{CustomerModel>/postalCode}" />
										<m:Label text="도시" />
										<m:Text id="city" text="{CustomerModel>/city}" />
										<m:Label text="국가" />
										<m:Text id="country" text="{CustomerModel>/country}" />
										<m:Label text="지역" />
										<m:Text id="region" text="{CustomerModel>/region}" />
										<m:Label text="" />
										<m:Text text="" />
										<m:Label text="" />
										<m:Text text="" />
									</f:content>
								</f:SimpleForm>
							</m:VBox>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>


