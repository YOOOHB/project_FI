<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout">
	<Dialog id="createCmpCode" title="회사 코드 생성">
		
		<form:SimpleForm layout="ResponsiveGridLayout">
			<form:content>
				
				<HBox>
					<Label text="회사 코드"/>
					<Input id="createCmpCodeCmpCode"/>
					<layoutData>
						<layout:GridData span= "XL1 L2 M6 S12"/>
					</layoutData>
				</HBox>  
				<HBox>
					<Label text="회사 이름"/>
					<Input id="createCmpCodeCmpName"/>
					<layoutData>
						<layout:GridData span= "XL1 L2 M6 S12"/>
					</layoutData>
				</HBox>  
				<HBox>
					<Label text="계정 통화"/>
					<Input id="createCmpCodeAccCurrency"/>			 
					<layoutData>
						<layout:GridData span= "XL1 L2 M6 S12"/>
					</layoutData>
				</HBox>  
				<HBox>
					<Label text="계정과목표"/>
					<Select id="createCmpCodeAccChart" items="{Account>/COA}">
						<core:Item key='{Account>accChart}' text="{Account>accChart}"/>
					</Select> 
					<layoutData>
						<layout:GridData span= "XL1 L2 M6 S12"/>
					</layoutData>
				</HBox>
			</form:content>
		</form:SimpleForm>
		
		<buttons>
			<Button text="생성" press=".onAcceptcreateCmpCode"/>
			<Button text="취소" press=".onBackcreateCmpCode"/>
		</buttons>
	</Dialog>
	
</core:FragmentDefinition>