<core:FragmentDefinition
	xmlns="sap.ui.comp.valuehelpdialog"
	xmlns:m="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core">
	<ValueHelpDialog
			id="chartpop"
			title="계정과목표"
			ok=".onValueHelpOk"
			cancel=".onCloseDialog1"
			supportRanges="true"
			key="accChart"
			descriptionKey="aacContents">
		
		<filterBar>
			<fb:FilterBar advancedMode="true" search=".onFilterSearch" isRunningInValueHelpDialog="true">
				<fb:filterGroupItems>
					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="accChart"
							label="계정과목표"
							visibleInFilterBar="true">
						<fb:control>
							<m:Input name="accChart"
									 showSuggestion="true"
									 showValueHelp="false"
									 suggestionItems="{
										path: '/ZSALESREPORTSuggestions',
										sorter: { path: 'accChart' }
									}">
								<core:Item key="{accChart}" text="{accChart}" />
							</m:Input>
						</fb:control>
					</fb:FilterGroupItem>
				 	<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="aacContents"
							label="내역"
							visibleInFilterBar="true">
						<fb:control>
							<m:Input name="내역"
									 showSuggestion="true"
									 showValueHelp="false"
									 suggestionItems="{
										path: '/ZSALESREPORTSuggestions',
										sorter: { path: 'aacContents' }
									}">
								<core:Item key="{aacContents}" text="{aacContents}" />
							</m:Input>
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
		</filterBar>
	</ValueHelpDialog>
</core:FragmentDefinition>
