<core:FragmentDefinition controllerName="project2.controller.createAccount"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:t="sap.ui.table"
	xmlns:layout="sap.ui.layout">
	<Dialog id="GLAccount" title="G/L 계정 마스터 데이터 생성">
		<content>
			<HBox>
				<Label text="G/L 계정 : " />
				<Input
				id="GLNum2"
				class="sapUiSmallMarginTop"
				type="Text"
				showValueHelp="true"
				valueHelpIconSrc="sap-icon://search"
				valueHelpRequest="onSearchGLAccountFragment"/>
			</HBox>
		</content>

		<t:Table id="SPrdTable" rows="{Product>/ProductList}" selectionMode="None"
				width="auto" cellClick=".onCellClickGLAccountFragment"> 
			<t:extension>
				<OverflowToolbar>
					<Title id="SPrdTableName" text="항목"/>
				</OverflowToolbar>
			</t:extension>
			<t:columns>
				<t:Column hAlign="Center" sortProperty="code" filterProperty="code">
					<Label text="G/L 계정"/>
					<t:template>
						<Text text="{>}"/>
					</t:template>
				</t:Column>
				<t:Column hAlign="Center" sortProperty="name" filterProperty="name">
					<Label text="계정과목표"/>
					<t:template>
						<Text text="{>}" />
					</t:template>
				</t:Column>
				<t:Column hAlign="Center" sortProperty="name" filterProperty="name">
					<Label text="설명"/>
					<t:template>
						<Text text="{>}" />
					</t:template>
				</t:Column>
			</t:columns>
		</t:Table>

		<buttons>
			<Button text="선택" press=".onAcceptGLAccountFragment"/>
			<Button text="취소" press=".onBackGLAccountFragment"/>
		</buttons>
	</Dialog>
	
</core:FragmentDefinition>