<core:FragmentDefinition   
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:t="sap.ui.table"	>
	<Dialog id="grouppop" title="계정 그룹 검색">
		<content>	
        	<VBox>
                <Label text="부품 코드: " />
                    <Input id="code1"/>
                    <layoutData>
                        <layout:GridData span="XL2 L2 M6 S12"/>
                    </layoutData>
            </VBox>
            <VBox>
            	<Label text="부품 명: " />
        			<Input id="name1" showValueHelp="true"			    			/>
            		<layoutData>
            			<layout:GridData span="XL2 L2 M6 S12"/>
                    </layoutData>
            </VBox>
			<HBox justifyContent="End" >
                <Button text="검색" type="Emphasized" press=".onSearch1"/> 
                <Button text="초기화" type="Transparent" press=".onReset1" class="sapUiTinyMarginBegin"/>
                	<layoutData>
                		<layout:GridData span="XL12 L12 M12 S12"/>
                	</layoutData>                        
            </HBox>

		
		<t:Table id="ProductTable1"
             rows="{Product>/productList}"
             selectionMode="MultiToggle"
             cellClick="onCellClick"
             width="auto">
        
        <t:columns>
            
            <t:Column hAlign="Center">
                <Label text="부품 코드" />
                <t:template>
                    <Text text="{Product>code}" />
                </t:template>
            </t:Column>
            <t:Column hAlign="Center">
                <Label text="부품명" />
                <t:template>
                    <Text text="{Product>name}" />
                </t:template>
            </t:Column>
        </t:columns>
    </t:Table>
		</content>
		<beginButton>
			<Button text="취소" press=".onCloseDialog2"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition >
