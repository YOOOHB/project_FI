<mvc:View controllerName="project2.controller.detailAccount"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:m="sap.m"
    xmlns:ui="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc">
    <ObjectPageLayout id="detailAccountPage"
		showTitleInHeaderContent="true"
		upperCaseAnchorBar="false"
		showFooter="true">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<heading>
                    <m:HBox>
                        <m:Button type="Back" press=".onBack" class="sapUiTinyMarginTop"/>
                        <m:Title text="G/L 계정 번호" wrapping="true" />
                    </m:HBox>
				</heading>

			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<sections>
            <ObjectPageSection titleUppercase="false" title="일반" >
				<subSections >
					<ObjectPageSubSection title="일반" titleUppercase="false" >
						<form:SimpleForm layout="ResponsiveGridLayout" >
                            <form:content>
                                <m:VBox >
                                    <m:HBox>
                                        <m:Label text="계정과목표 : " class="sapUiTinyMarginBegin"/>
                                    </m:HBox>
                                    <m:HBox>
                                        <m:Label text="계정 유형 : " class="sapUiTinyMarginBegin"/>
                                    </m:HBox>
                                    <m:HBox>
                                        <m:Label text="계정 그룹 : " class="sapUiTinyMarginBegin"/>
                                    </m:HBox>
                                    <m:HBox>
                                        <m:Label text="생성일 : " class="sapUiTinyMarginBegin"/>
                                    </m:HBox>
                                    <m:HBox>
                                        <m:Label text="생성자 : " class="sapUiTinyMarginBegin"/>
                                    </m:HBox>
									<m:HBox>
                                        <m:Label text="내역 : " class="sapUiTinyMarginBegin"/>
                                    </m:HBox>
                                    <m:layoutData>
                                        <layout:GridData span="XL1 L1 M1 S1" />
                                    </m:layoutData>
                                </m:VBox>
                                <m:VBox>
                                    <m:HBox>
                                        <m:Text text="{AccountModel>/accChart}" class="sapUiTinyMarginBegin" width="auto"/>
                                    </m:HBox>
                                    <m:HBox>
                                        <m:Text text="{AccountModel>/accCategory}" class="sapUiTinyMarginBegin" width="auto"/>
                                    </m:HBox>
                                    <m:HBox>
                                        <m:Text text="{AccountModel>/accGroup}" class="sapUiTinyMarginBegin" width="auto"/>
                                    </m:HBox>
                                    <m:HBox>
                                        <m:Text text="{AccountModel>/createDate}" class="sapUiTinyMarginBegin" width="auto"/>
                                    </m:HBox>
                                    <m:HBox>
                                        <m:Text text="{AccountModel>/creator}" class="sapUiTinyMarginBegin" width="auto"/>
                                    </m:HBox>
									<m:HBox>
                                       <m:Text text="{AccountModel>/accContents}" class="sapUiTinyMarginBegin" width="auto"/>
                                    </m:HBox>
                                    <m:layoutData>
                                        <layout:GridData span="XL10 L10 M10 S10" />
                                    </m:layoutData>
                                </m:VBox>

                            </form:content>
                        </form:SimpleForm>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

            <ObjectPageSection titleUppercase="false">
				<subSections>
					<ObjectPageSubSection title="회사 코드 데이터" titleUppercase="false">
                        <ui:Table id="idProductsTable"
                            visibleRowCountMode="Auto"
                            minAutoRowCount="1"
                            selectionMode="None" width="auto">
							<ui:extension>
                                <m:OverflowToolbar>
                                    <m:Title id="TableName" text="회사코드지정()"/>
                                </m:OverflowToolbar>
                            </ui:extension>
                            <ui:columns>
                                <ui:Column
                                    label="회사 코드">
                                    <ui:template>
                                        <m:Text text="{AccountModel>/cmpCode}" />
                                    </ui:template>
                                </ui:Column>
                                <ui:Column
                                    label="회사 이름">
                                    <ui:template>
                                        <m:Text text="{AccountModel>/cmpName}" />
                                    </ui:template>
                                </ui:Column>
                                <ui:Column
                                    label="계정 통화">
                                    <ui:template>
                                        <m:Text text="{AccountModel>/accCurrency}" />
                                    </ui:template>
                                </ui:Column>
                                <ui:Column label="계정과목표">
                                    <ui:template>
                                        <m:Text text="{AccountModel>/accChart}" />
                                    </ui:template>
                                </ui:Column>
                            </ui:columns>
                        </ui:Table>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections> 
		<footer>
            <m:OverflowToolbar>
                <m:ToolbarSpacer/>
                <m:Button type="Default" text="뒤로" press=".onBack"/>
            </m:OverflowToolbar>
        </footer> 
	</ObjectPageLayout>
</mvc:View>

