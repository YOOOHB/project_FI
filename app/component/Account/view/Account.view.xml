<mvc:View
controllerName="project2.controller.Account" 
xmlns="sap.m"
xmlns:f="sap.f" 
xmlns:t="sap.ui.table" 
xmlns:mvc="sap.ui.core.mvc" 
xmlns:layout="sap.ui.layout"
xmlns:core="sap.ui.core"
xmlns:form="sap.ui.layout.form"
height="100%">
    <f:DynamicPage id="AccountPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Button 
                        icon="sap-icon://nav-back"
                        press="onhomeAccount"
                        type="Transparent"/>
                    <HBox>
                        <Title text="G/L계정 마스터"/>
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm layout="ResponsiveGridLayout">
                    <form:content>
                        <VBox>
                            <Label text="계정 번호"/>
                            <Input id="accNumber"/>
                            <layoutData>
                                <layout:GridData span= "XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="계정과목표"/>
                            <Input id="accChart" showValueHelp="true"
			                       valueHelpRequest=".onValueHelpChart"/>
                            <layoutData>
                                <layout:GridData span= "XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="G/L계정 유형"/>
                            <Input id="accCategory"/>
                            <layoutData>
                                <layout:GridData span= "XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="생성일자"/>
                            <DatePicker
                                id="createDate"
                                displayFormat="yyyy-MM-dd"/>
                            <layoutData>
                                <layout:GridData span= "XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="계정 그룹"/>
                            <Input id="accGroup" showValueHelp="true"
			                       valueHelpRequest=".onValueHelpGroup"/>
                            <layoutData>
                                <layout:GridData span= "XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <HBox justifyContent="End">
                            <Button text="검색" type="Emphasized" press=".onSearch"/>
                            <Button text="초기화" type="Transparent" press=".onReset" class="sapUiTinyMarginBegin"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12"/>
                            </layoutData>                          
                        </HBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content class="sapUiSmallMargin">
            <t:Table id="AccountTable"
                rows="{AccountModel>/}"
                selectionMode="MultiToggle"
                rowActionCount="1"
                width="auto">
            
                <t:extension>
                    <OverflowToolbar>
                        <Title id="TableName" text="G/L계정"/>
                        <ToolbarSpacer/>
                        <Button
                            text="G/L계정 생성"
                            press="onCreateAccount"
                            type="Transparent"/>
                        <Button
                            icon="sap-icon://delete"
                            tooltip="삭제"
                            press="onDeleteAccount"
                            type="Transparent"/>
                        <Button
                            icon="sap-icon://sort"
                            press="onSortAccount"
                            tooltip="정렬"
                            type="Transparent"/>
                        <Button
                            icon="sap-icon://excel-attachment"
                            tooltip="Excel Download"
                            press="onDataExport"
                            type="Transparent"/>

                    </OverflowToolbar>
                </t:extension>
                <t:columns>
                    <t:Column hAlign="Center">
                        <Label text="G/L계정 번호" />
                        <t:template>
                            <Text text="{AccountModel>accNumber}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="생성일자" />
                        <t:template>
                            <Text text="{AccountModel>createDate}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="계정과목표" />
                        <t:template>
                            <Text text="{AccountModel>accChart}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="G/L계정 유형" />
                        <t:template>
                            <Text text="{AccountModel>accCategory}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="계정 그룹" />
                        <t:template>
                            <Text text="{AccountModel>accGroup}" />
                        </t:template>
                    </t:Column>
                </t:columns>
                    <t:rowActionTemplate>
                        <t:RowAction>
                            <t:items>
                                <t:RowActionItem type="Navigation" press="onNavToDetail"/>                          </t:items>
                        </t:RowAction>
                    </t:rowActionTemplate>
            </t:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>