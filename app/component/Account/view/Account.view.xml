<mvc:View
controllerName="project2.controller.Account" 
xmlns="sap.m"
xmlns:f="sap.f" 
xmlns:t="sap.ui.table" 
xmlns:mvc="sap.ui.core.mvc" 
xmlns:layout="sap.ui.layout"
xmlns:core="sap.ui.core"
xmlns:form="sap.ui.layout.form"
height="100%">
    <f:DynamicPage id="AccountPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                    <Button 
                        type="Back"
                        press="onhomeAccount"
                        class="sapUiTinyMarginTop"/>
                        <Title text="G/L계정 마스터"/>
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm layout="ResponsiveGridLayout">
                    <form:content>
                        <VBox>
                            <Label text="계정 번호"/>
                            <Input id="accNumber"/>
                            <layoutData>
                                <layout:GridData span= "XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="계정과목표"/>
                            <MultiInput id="accChart" showValueHelp="true"
			                       valueHelpRequest=".onValueHelpChart1"/>
                            <layoutData>
                                <layout:GridData span= "XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="G/L계정 유형"/>
                             <ComboBox width="100%" id="accCategory" 
                                items="{path: 'Account>/AccCategory'}">
                                <core:Item text="{Account>accCategory_kor}" key="{Account>accCategory_key}" />
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span= "XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="생성일자"/>
                            <DatePicker
                                id="createDate"
                                displayFormat="yyyy-MM-dd"
                                valueFormat="yyyy-MM-dd"/>
                            <layoutData>
                                <layout:GridData span= "XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="계정 그룹"/>
                            <MultiInput id="accGroup" showValueHelp="true"
			                       valueHelpRequest=".onValueHelpGroup2"/>
                            <layoutData>
                                <layout:GridData span= "XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <HBox justifyContent="End">
                            <Button text="검색" type="Emphasized" press=".onSearch"/>
                            <Button text="초기화" type="Transparent" press=".onReset" class="sapUiTinyMarginBegin"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12"/>
                            </layoutData>                          
                        </HBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content class="sapUiSmallMargin">
            <t:Table id="AccountTable"
                rows="{AccountModel>/}"
                selectionMode="None"
                rowActionCount="1"
                width="auto">
            
                <t:extension>
                    <OverflowToolbar>
                        <Title id="TableName" text="G/L계정"/>
                        <ToolbarSpacer/>
                        <Button
                            text="G/L계정 생성"
                            press="onCreateAccount"
                            type="Transparent"/>
                        <Button
                            icon="sap-icon://delete"
                            tooltip="삭제"
                            press="onDeleteAccount"
                            type="Transparent"/>
                        <Button
                            icon="sap-icon://sort"
                            press="onSortAccount"
                            tooltip="정렬"
                            type="Transparent"/>
                        <Button
                            icon="sap-icon://excel-attachment"
                            tooltip="Excel Download"
                            press="onDataExport"
                            type="Transparent"/>

                    </OverflowToolbar>
                </t:extension>
                <t:columns>
                    <t:Column hAlign="Center" width="5rem" >
                        <Label  text="" />
                            <t:template>
                                <CheckBox  visible="true"
                                selected ="{AccountModel>CHK}" textAlign="Center" select="oncheckselect"/>
                            </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="G/L계정 번호" />
                        <t:template>
                            <Text text="{AccountModel>accNumber}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="생성일자" />
                        <t:template>
                            <Text text="{AccountModel>createDate}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="계정과목표" />
                        <t:template>
                            <Text text="{AccountModel>accChart}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="G/L계정 유형" />
                        <t:template>
                            <ObjectStatus 
                            text="{
                                    path: 'AccountModel>accCategory',
                                    formatter:'.formatter.statusText'
                                        }"/>
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="계정 그룹" />
                        <t:template>
                            <Text text="{AccountModel>accGroup}" />
                        </t:template>
                    </t:Column>
                </t:columns>
                    <t:rowActionTemplate>
                        <t:RowAction>
                            <t:items>
                                <t:RowActionItem type="Navigation" press="onNavToDetail"/>
                            </t:items>
                        </t:RowAction>
                    </t:rowActionTemplate>
            </t:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>