<mvc:View controllerName="project2.controller.createAccount"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
	xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:ui="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">
    <ObjectPageLayout id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		selectedSection="paymentSubSection"
		useIconTabBar="true"
		upperCaseAnchorBar="false"
        showFooter="true">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<heading>
                    <m:HBox>
                        <m:Button type="Back" press=".onBack" class="sapUiTinyMarginTop"/>
                        <m:Title text="G/L 계정 마스터 데이터 생성" wrapping="true" />
                    </m:HBox>
				</heading>

			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<sections>
			<ObjectPageSection titleUppercase="false" title="헤더">
				<subSections>
					<ObjectPageSubSection title="헤더" titleUppercase="false">
						<form:SimpleForm layout="ResponsiveGridLayout">
                            <form:content>
                                <m:VBox>
                                    <m:HBox>
                                        <m:Label text="G/L 계정 번호 : " />
                                        <m:Input id="GLNum" showValueHelp="true" valueHelpRequest=".onOpenGLAccount" class="sapUiTinyMarginBegin" width="auto"/>
                                        <m:layoutData>
                                            <layout:GridData span="XL3 L3 M6 S12" />
                                        </m:layoutData>
                                    </m:HBox>
                                </m:VBox>                                    
                            </form:content>
                        </form:SimpleForm>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

            <ObjectPageSection titleUppercase="false" title="일반">
				<subSections>
					<ObjectPageSubSection title="일반" titleUppercase="false">
						<form:SimpleForm layout="ResponsiveGridLayout">
                            <form:content>

                                <m:VBox>
                                    <m:HBox alignItems="Center">
                                        <m:Label text="계정과목표 : " class="sapUiTinyMarginTop" />                                        
                                    </m:HBox>                                
                                    <m:HBox alignItems="Center">
                                        <m:Label text="계정 유형 : " class="sapUiTinyMarginTop"/>                                        
                                    </m:HBox>                                
                                    <m:HBox alignItems="Center">
                                        <m:Label text="계정 그룹 : " class="sapUiTinyMarginTop"/>                                        
                                    </m:HBox>                                
                                    <m:HBox alignItems="Center">
                                        <m:Label text="생성일 : " class="sapUiTinyMarginTop"/>                                        
                                    </m:HBox>                                
                                    <m:HBox alignItems="Center">
                                        <m:Label text="생성자 : " class="sapUiTinyMarginTop"/>                                        
                                    </m:HBox>
                                    <m:layoutData>
                                        <layout:GridData span="XL1 L1 M1 S1" />
                                    </m:layoutData>
                                </m:VBox>

                                <m:VBox>          
                                    <m:Input id="COAtest" width="20%"/>     
                                    <m:Select id="accType" items="{path: 'select>/selectList'}" width="20%">
                                        <core:Item text="{>}" key="{>}" />
                                    </m:Select>             
                                    <m:Input id="accGroup" showValueHelp="true" valueHelpRequest=".onOpenAccountGroup"  width="20%"/>
                                    <m:Text text="2022-12-04"  width="20%"/>
                                    <m:Input id="creator"  width="20%"/>
                                    <m:layoutData>
                                        <layout:GridData span="XL11 L11 M11 S11" />
                                    </m:layoutData>
                                </m:VBox>

                            </form:content>
                        </form:SimpleForm>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

            <ObjectPageSection titleUppercase="false">
				<subSections>
					<ObjectPageSubSection title="회사 코드 데이터" titleUppercase="false">
                        <ui:Table id="idProductsTable"
                            visibleRowCountMode="Auto"
                            minAutoRowCount="2"
                            rows="{path: '>/', sorter: {path: 'Name'}}"
                            selectionMode="None" width="auto">
                            <ui:extension>
                                <m:OverflowToolbar>
                                    <m:Title id="TableName" text="회사코드지정()"/>
                                    <m:ToolbarSpacer/>
                                    <m:Button text="생성" press=".onCreateCmpCode" type="Transparent" ariaHasPopup="Dialog"/> 
                                </m:OverflowToolbar>
                            </ui:extension>
                            <ui:columns>
                                <ui:Column
                                    label="회사 코드">
                                    <ui:template>
                                        <m:Text text="{>}" />
                                    </ui:template>
                                </ui:Column>
                                <ui:Column
                                    label="회사 이름">
                                    <ui:template>
                                        <m:Text text="{>}" />
                                    </ui:template>
                                </ui:Column>
                                <ui:Column
                                    label="계정 통화">
                                    <ui:template>
                                        <m:Text text="{>}" />
                                    </ui:template>
                                </ui:Column>
                                <ui:Column label="계정과목표">
                                    <ui:template>
                                        <m:Text text="{>}" />
                                    </ui:template>
                                </ui:Column>
                            </ui:columns>
                        </ui:Table>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

        <footer>
            <m:OverflowToolbar >
                <m:ToolbarSpacer/>
                <m:Button type="Emphasized" text="생성" press=".onCreate"/>
                <m:Button type="Default" text="취소" press=".onBack"/>
            </m:OverflowToolbar>
        </footer> 
        
	</ObjectPageLayout>
</mvc:View>

