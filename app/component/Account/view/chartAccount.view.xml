<mvc:View
	controllerName="project2.controller.chartAccount"
	xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0">
   
	<f:DynamicPage id="AccountPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                    <Button 
                        type="Back"
                        press="onhomeAccount"
                        class="sapUiTinyMarginTop"/>
                        <Title text="G/L 계정과목 차트"/>
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:content class="sapUiSmallMargin">
            <HBox>
				<f:Card class="sapUiMediumMargin" width="300px">
					<f:header>
						<card:Header title="G/L account number 목록" subtitle="최신 3개의 생성 데이터가 보입니다."/>
					</f:header>
					<f:content>
						<List showSeparators="None" items="{path: 'RctGLAccModel>/'}">
							<CustomListItem press=".onNavToDetail" type="Active">
								<HBox alignItems="Center" justifyContent="SpaceBetween">
									<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
										<Title level="H3" text="{RctGLAccModel>accNumber}" />
										<Title text="{RctGLAccModel>createDate}"/>
									</VBox>
									<ObjectStatus class="sapUiTinyMargin sapUiSmallMarginEnd" text="{RctGLAccModel>creator}" state="None"/>  
								</HBox>
							</CustomListItem>
						</List>
					</f:content>
				</f:Card>
			</HBox>
        </f:content>
        
    </f:DynamicPage>
</mvc:View>