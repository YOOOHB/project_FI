<mvc:View
    controllerName="project2.controller.homeAccount"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
	<ScrollContainer height="100%" width="100%" vertical="true" focusable="true">
		<Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
			<content class="panelbottomline">
				<HBox width="100%" height="3rem">
					<Title text="G/L(총계정원장)"  />
				</HBox>
				<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="G/L 계정 조회" press=".onAccount">
					<TileContent>
						<ImageContent src="sap-icon://accounting-document-verification"/>
					</TileContent>
				</GenericTile>
				<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="G/L 계정 생성" press=".onCreateAccount">
					<TileContent>
						<ImageContent src="sap-icon://create-form"/>
					</TileContent>
				</GenericTile>
				<HBox width="100%" height="3rem"/>
				<!-- <HBox width="100%" height="3rem">
					<Title text="Account Overview"/>
				</HBox> -->
			</content>
		</Panel>
	</ScrollContainer>
</mvc:View>